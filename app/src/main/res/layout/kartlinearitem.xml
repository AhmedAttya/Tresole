<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_weight="0.3"
        android:id="@+id/kartlinearitemimageview"
        android:layout_width="@dimen/linearitemimagewidth"
        android:layout_height="@dimen/linearitemimageheight"
        ></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/kartlinearitemname"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/paddingstartforlinearitemtext"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/kartlinearitemprice"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/paddingstartforlinearitemtext"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <ImageButton
        android:layout_weight="0.2"
        android:id="@+id/layout_list_delete"
        android:layout_width="@dimen/xbuttonwidth"
        android:layout_height="@dimen/xbuttonheight"
        android:layout_gravity="center"
        android:src="@drawable/cancel1">

    </ImageButton>
</LinearLayout>