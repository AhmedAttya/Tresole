<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/linearitemimageview"
        android:layout_width="@dimen/linearitemimagewidth"
        android:layout_height="@dimen/linearitemimageheight"
        ></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/linearitemname"
        android:layout_width="wrap_content"
        android:paddingStart="@dimen/paddingstartforlinearitemtext"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/linearitemprice"
        android:layout_width="wrap_content"
        android:paddingStart="@dimen/paddingstartforlinearitemtext"
        android:layout_height="wrap_content">

    </TextView>
    <RatingBar
        android:id="@+id/linearitemratingbar"
        android:layout_width="wrap_content"
        android:numStars="5"
        android:theme="@style/RatingBar"
        android:progressTint="@color/gold"
        style="?android:attr/ratingBarStyleSmall"
        android:paddingStart="@dimen/paddingstartforlinearitemtext"
        android:layout_height="wrap_content">

    </RatingBar>
    </LinearLayout>
</LinearLayout>