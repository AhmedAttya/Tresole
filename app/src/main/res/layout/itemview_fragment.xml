<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".itemView.ItemviewFragment"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/itemviewscrollviewmargintop"
    android:fillViewport="true"
    android:layout_height="wrap_content">


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:layout_width="@dimen/itemviewimagewidth"
        android:layout_height="@dimen/itemviewimageheight"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemtextview"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemtextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/pricetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.067" />
    <TextView
        android:id="@+id/newpricetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.067" />
</LinearLayout>
    <TextView
        android:id="@+id/discounttextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricetextview"
        app:layout_constraintVertical_bias="0.127" />

    <RatingBar
        android:numStars="5"
        android:id="@+id/ratingshowbar"
        android:layout_gravity="start"
        android:theme="@style/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/gold"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:layout_marginStart="@dimen/itemviewmargintop"

        >

    </RatingBar>
    <TextView
        android:id="@+id/availabilitytextview"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discounttextview"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/brandnametextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ratingBar"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.127" />

    <TextView
        android:id="@+id/shippingstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/availabilitytextview"
        app:layout_constraintVertical_bias="0.129" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buynow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/buttonmargistart"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:layout_marginEnd="@dimen/buttonmarginend"
        app:cornerRadius="@dimen/materialbuttonradius"
        android:paddingStart="@dimen/itemviewpaddingstart"
        android:text="@string/buynow"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippingstatus"
        app:layout_constraintVertical_bias="0.091" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addtokart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/buttonmarginend"
        app:cornerRadius="@dimen/materialbuttonradius"
        android:layout_marginStart="@dimen/buttonmargistart"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        android:text="@string/addtokart"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buynow"
        app:layout_constraintVertical_bias="0.129" />

    <TextView
        android:id="@+id/itemdescriptiontext"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/itemviewmargintop"
        android:paddingStart="@dimen/itemviewpaddingstart"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:gravity="start|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addtokart" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/ratingBar"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:theme="@style/RatingBar"
            android:numStars="5"
            android:textAlignment="viewStart"
            android:progressTint="@color/gold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.152"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ratebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/ratebutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ratingBar"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.button.MaterialButton>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
</ScrollView>